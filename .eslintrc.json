{
  "rules": {
    "indent": [
      2,
      4
    ],
    "quotes": [
      2,
      "single",
      "avoid-escape"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "no-trailing-spaces": [
      2
    ]
  },
  "env": {
    "browser": true,
    "node": true
  },
  "extends": "eslint:recommended"
}