{
  "name": "nany",
  "version": "1.0.0",
  "description": "Nainwak Hub Bookmarklet",
  "author": "Sylvain Prat <sylvain.prat@gmail.com>",
  "contributors": [],
  "keywords": [
    "Nainwak"
  ],
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sprat/nany.git"
  },
  "homepage": "http://sprat.github.io/nany/",
  "bugs": {
    "url": "https://github.com/sprat/nany/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "amdclean": "^2.7.0",
    "clean-css": "^3.4.5",
    "eslint": "^1.5.1",
    "live-server": "^0.8.1",
    "nodemon": "^1.7.1",
    "npm-run-all": "^1.2.11",
    "phantomjs": "^1.9.18",
    "qunit-phantomjs-runner": "^2.1.0",
    "requirejs": "^2.1.20",
    "uglify-js": "^2.4.24"
  },
  "scripts": {
    "server": "live-server",
    "lint": "eslint .",
    "test": "phantomjs ./node_modules/qunit-phantomjs-runner/runner.js ./tests.html",
    "prebuild:js": "npm run lint && npm run test",
    "build:js": "node js/build/build.js",
    "build:css": "cleancss --source-map --output dist/nany.min.css css/nany.css",
    "build": "npm run build:js && npm run build:css",
    "watch:js": "nodemon -e js --ignore dist --exec npm run build:js",
    "watch:css": "nodemon -e css --ignore dist --exec npm run build:css",
    "watch": "npm-run-all --parallel watch:js watch:css",
    "dev": "npm-run-all --parallel server watch:js watch:css"
  },
  "eslintConfig": {
    "rules": {
      "indent": [
        2,
        4
      ],
      "quotes": [
        2,
        "single",
        "avoid-escape"
      ],
      "linebreak-style": [
        2,
        "unix"
      ],
      "semi": [
        2,
        "always"
      ],
      "no-trailing-spaces": [
        2
      ]
    },
    "env": {
      "browser": true,
      "amd": true
    },
    "extends": "eslint:recommended"
  }
}
