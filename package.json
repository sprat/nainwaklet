{
  "name": "nany",
  "version": "1.0.0",
  "description": "Nainwak Hub Bookmarklet",
  "author": "Sylvain Prat <sylvain.prat@gmail.com>",
  "contributors": [],
  "keywords": [
    "Nainwak"
  ],
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sprat/nany.git"
  },
  "homepage": "http://sprat.github.io/nany/",
  "bugs": {
    "url": "https://github.com/sprat/nany/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "amdclean": "^2.7.0",
    "clean-css": "^3.4.5",
    "eslint": "^1.5.1",
    "eslint-watch": "^2.1.2",
    "live-server": "^0.8.1",
    "nodemon": "^1.7.1",
    "npm-run-all": "^1.2.11",
    "requirejs": "^2.1.20",
    "uglify-js": "^2.4.24"
  },
  "scripts": {
    "server": "live-server",
    "lint": "esw",
    "build:js": "node build.js",
    "build:css": "cleancss --source-map --output css/nany.min.css css/nany.css",
    "build": "npm-run-all --sequential lint build:js build:css",
    "watch:lint": "esw --watch",
    "watch:build:js": "nodemon --ignore dist build.js",
    "watch:build:css": "nodemon -e css --ignore *.min.css --exec npm run build:css",
    "watch": "npm-run-all --parallel watch:lint watch:build:js watch:build:css",
    "dev": "npm-run-all --parallel server watch:lint watch:build:js watch:build:css"
  },
  "eslintConfig": {
    "rules": {
      "indent": [
        2,
        4
      ],
      "quotes": [
        2,
        "single",
        "avoid-escape"
      ],
      "linebreak-style": [
        2,
        "unix"
      ],
      "semi": [
        2,
        "always"
      ],
      "no-trailing-spaces": [
        2
      ]
    },
    "env": {
      "browser": true,
      "amd": true,
      "qunit": true
    },
    "extends": "eslint:recommended"
  }
}
