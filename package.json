{
  "name": "nainwaklet",
  "version": "1.0.0",
  "description": "Nainwak Hub Bookmarklet",
  "author": "Sylvain Prat <sylvain.prat@gmail.com>",
  "contributors": [],
  "keywords": [
    "Nainwak"
  ],
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sprat/nainwaklet.git"
  },
  "homepage": "http://sprat.github.io/nainwaklet/",
  "bugs": {
    "url": "https://github.com/sprat/nainwaklet/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "amdclean": "^2.7.0",
    "eslint": "^1.5.1",
    "eslint-watch": "^2.1.2",
    "live-server": "^0.8.1",
    "npm-run-all": "^1.2.11",
    "requirejs": "^2.1.20"
  },
  "scripts": {
    "server": "live-server",
    "server:tests": "npm run server -- --open=tests.html",
    "lint": "esw src --ignore-pattern src/vendor/*",
    "build": "node src/build.js",
    "watch:lint": "npm run lint -- --watch",
    "dev": "npm-run-all --parallel server:tests watch:lint"
  },
  "eslintConfig": {
    "rules": {
      "indent": [
        2,
        4
      ],
      "quotes": [
        2,
        "single",
        "avoid-escape"
      ],
      "linebreak-style": [
        2,
        "unix"
      ],
      "semi": [
        2,
        "always"
      ],
      "no-trailing-spaces": [
        2
      ]
    },
    "env": {
      "browser": true,
      "amd": true,
      "qunit": true
    },
    "extends": "eslint:recommended"
  }
}
